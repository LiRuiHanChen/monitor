<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.monitor.argent.dao.HomeWorkMapper">

    <insert id="addHomeWorkTestCase" useGeneratedKeys="true"
            parameterType="com.monitor.argent.entity.HomeWorkRequestBean">
        insert
        * FROM check_homework
    </insert>

    <select id="getHomeWorkTestCase" resultType="com.monitor.argent.entity.HomeWorkResponseBody">
        select *
        from check_homework
        <where>
            <if test="caseName != null and caseName != ''">
                AND case_name LIKE CONCAT ('%',#{caseName},'%')
            </if>
            <if test="stage != null">
                and stage=#{stage}
            </if>
            <if test="subject != null">
                and subject=#{subject}
            </if>
            <if test="flag != null">
                and flag=#{flag}
            </if>
        </where>
    </select>

    <update id="editHomeWorkTestCase" parameterType="com.monitor.argent.entity.HomeWorkRequestBean">
        update
    </update>
</mapper>
